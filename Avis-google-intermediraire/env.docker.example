# Backend Configuration
BACKEND_PORT=3000
FRONTEND_PORT=80

# Frontend URL (used for CORS and email links)
FRONTEND_URL=http://localhost

# Backend API URL (used by frontend)
REACT_APP_API_URL=http://localhost:3000

# Database
# Option 1: SQLite (développement local)
DATABASE_PATH=./back/data/avis.sqlite

# Option 2: Supabase JS (production recommandé)
# Le projet utilise maintenant Supabase JS au lieu de PostgreSQL direct
# SUPABASE_URL=https://your-project-ref.supabase.co
# SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# Note: Trouvez ces valeurs dans Supabase → Settings → API

# Option 3: PostgreSQL classique (alternative)
# DATABASE_URL=postgresql://user:password@host:port/database
# DATABASE_SSL=true

# Email Configuration
# Option 1: SMTP (Gmail, SendGrid, Mailgun, Resend SMTP)
MAIL_FROM="Cabinet <no-reply@example.com>"
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=username
SMTP_PASS=password
POD_PRAT_EMAIL=podologue@example.com

# Option 2: Resend API (recommandé pour Render)
# RESEND_API_KEY=re_xxxxxxxxxxxxx
# RESEND_FROM_EMAIL=Cabinet <onboarding@resend.dev>

# Google Calendar Configuration
GOOGLE_CALENDAR_ID=primary
CALENDAR_POLL_MINUTES=15
GOOGLE_REVIEW_URL=https://search.google.com/local/writereview?placeid=YOUR_PLACE_ID
TOKEN_EXPIRATION_DAYS=30

# Google Credentials (for cloud deployment - alternative to mounting files)
# Option 1: Mount files as volumes (for local development)
# Option 2: Set these variables with the full JSON content (for cloud deployment like Render)
# GOOGLE_CREDENTIALS_JSON={"installed":{"client_id":"...","client_secret":"...","redirect_uris":["..."]}}
# GOOGLE_TOKEN_JSON={"access_token":"...","refresh_token":"...","scope":"...","token_type":"Bearer","expiry_date":...}

# EmailJS Configuration (optional, fallback for frontend)
REACT_APP_EMAILJS_SERVICE_ID=your_service_id
REACT_APP_EMAILJS_TEMPLATE_ID=your_template_id
REACT_APP_EMAILJS_USER_ID=your_user_id

